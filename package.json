{
  "name": "blue-widgets",
  "version": "2.0.1",
  "description": "A class-based widget library for adding complex javascript functionality to existing DOM elements",
  "files": [
    "es",
    "index.js",
    "registry.js",
    "parser.js",
    "Widget.js",
    "extend.js",
    "extendClass.js",
    "getData.js",
    "umd"
  ],
  "main": "index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "node ./tools/build.js",
    "watch": "babel ./modules -d . --ignore __tests__ --watch",
    "docs": "jsdoc2md --template README.source.md ./modules/*.js > README.md",
    "prepublishOnly": "npm run build && npm run docs"
  },
  "author": {
    "name": "Simon Buerger",
    "url": "https://github.com/simonbuerger"
  },
  "license": "MIT",
  "issues": "http://github.com/bluegrassdigital/blue-widgets/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluegrassdigital/blue-widgets.git"
  },
  "keywords": [
    "dom",
    "widgets",
    "class",
    "library",
    "framework"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-1": "^6.5.0",
    "gzip-size": "^4.0.0",
    "pretty-bytes": "^4.0.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "dependencies": {
    "jsdoc-to-markdown": "^3.0.3"
  }
}
